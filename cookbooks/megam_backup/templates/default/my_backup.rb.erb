    # Or, to use a IAM Profile:
    # s3.use_iam_profile = true
    s3.region            = "<%= node['backup']['s3']['region'] %>"
    s3.bucket            = "<%= node['backup']['s3']['bucket'] %>"
    s3.path              = "<%= node['backup']['s3']['path'] %>"
  end
