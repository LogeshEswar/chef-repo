end script

respawn

exec start-stop-daemon --start --chdir "<%= @app_path %>" --exec <%= @bundler ? "#{@bundle_command} exec " : '' %>unicorn_rails -- -E <%= @rails_env %> -c "/etc/unicorn/<%= @app_name %>.rb"
